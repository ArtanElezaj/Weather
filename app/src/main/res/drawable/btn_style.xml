<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/green" />
            <corners android:radius="@dimen/btn_corner_radius_green" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/btn_stroke_width" android:color="@color/purple" />
            <solid android:color="@color/colorWhite" />
            <corners android:radius="@dimen/btn_corner_radius_purple" />
        </shape>
    </item>
</selector>